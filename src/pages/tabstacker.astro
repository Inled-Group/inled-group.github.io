---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

---
<Layout>
  <title>Tabstacker | Inled Group</title>
    <meta name="description" content="Gestor de pestañas privado y fácil para Chrome">
  <Header />
<h1 class="wemake-start">Tabstacker</h1>
<div class="descargar">
  <div class="content-descargar">
    <h1 class="h1-descargar">Guarda pestañas</h1>
    <p class="p-descargar">Y solo serán tuyas.
    </p>
    <div class="buttons">
      <a href="https://indoc.inled.es" class="btn-descargar">Descargar</a>
      <a href="https://github.com/Inled-Group/indoc" class="btn-codigo">Código</a>
    </div>
  </div>
  <div class="image-container">
    <img src={import.meta.env.BASE_URL + "/upload/tabstacker.png"} alt="Imagen tabstacker">
  </div>
</div>

<h1 class="h1init">Diferente</h1>

<div class="card-section-instalables">
  <div class="card-instalables">
    <img src={import.meta.env.BASE_URL + "/upload/mdpdf.functions-3.gif"} alt="Privacidad 100%">
    <h2>No eres el producto</h2>
    <p>Todo privado, solo para tí.</p>
  </div>
  <div class="card-instalables">
    <img src={import.meta.env.BASE_URL + "/upload/potente.gif"} alt="Rápido">
    <h2>Sencillo</h2>
    <p>A dos clics.</p>
  </div>
  <div class="card-instalables">
    <img src={import.meta.env.BASE_URL + "/upload/curva.gif"} alt="rápido">
    <h2>Potente</h2>
    <p>Rápido y al instante</p>
  </div>
</div>

<Footer />
</Layout>
