                        <img src={news.image} alt={news.title} />
                        <div class="news-category">{news.category}</div>
                    </div>
                    <div class="news-content">
                        <h3 class="news-title">{news.title}</h3>
                        <p class="news-summary">{news.summary}</p>
                        <div class="news-meta">
