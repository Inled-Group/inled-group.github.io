---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const base = import.meta.env.BASE_URL;


// Sección de noticias
const newsData = [
{
        id: 1,
        title: 'Desarrollo con IA responsable: el futuro de la programación',
        summary: 'Inled, marca pionera en desarrollo con IA desde que nació ChatGPT 3',
        date: '17-6-25',
        category: 'LTL',
        image: base + '/upload/nokiamanosrobot.png',
        slug: 'desarrollo-con-ia-responsable-herramientas'
    },
  
];
---
<Layout>
    <Header />
    <title>Blog | Inled Group</title>
    <meta name="description" content="Descubre las novedades de Inled.">

    <section id="noticias" class="news">
    <div class="container">
        <h2 class="section-title">Blog</h2>
        <div class="news-grid" id="newsGrid">
            {newsData.map(news => (
                <article class="news-card" data-news-id={news.id} data-news-slug={news.slug}>
                    <div class="news-image">
                        <img src={news.image} alt={news.title} />
                        <div class="news-category">{news.category}</div>
                    </div>
                    <div class="news-content">
                        <h3 class="news-title">{news.title}</h3>
                        <p class="news-summary">{news.summary}</p>
                        <div class="news-meta">
                            <span class="news-date">{news.date}</span>
                            <span class="news-read-more">Leer más →</span>
                        </div>
                    </div>
                </article>
            ))}
        </div>
    </div>
</section>
<Footer />
</Layout>