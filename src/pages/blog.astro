---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';


// Sección de noticias
const newsData = [
    {
        id: 1,
        title: 'Aplicaciones gratuitas: cuidado con esto',
        summary: 'Las aplicacione sgratuitas pueden parecer muy atractivas pero hay que tener esto en cuenta',
        date: '17-6-25',
        category: 'LTL',
        image: '../public/upload/404.png',
        slug: 'undefined'
    },
    {
        id: 2,
        title: 'undefined',
        summary: 'null',
        date: '17-6-25',
        category: 'null',
        image: '../public/upload/404.png',
        slug: 'undefined'
    },
    {
        id: 2,
        title: 'undefined',
        summary: 'null',
        date: '17-6-25',
        category: 'null',
        image: '../public/upload/404.png',
        slug: 'undefined'
    }
];
---
<Layout>
    <Header />
    <title>Blog | Inled Group</title>
    <meta name="description" content="Tutoriales, noticias y artículos sobre tecnología.">

    <section id="noticias" class="news">
    <div class="container">
        <h2 class="section-title">Blog</h2>
        <div class="news-grid" id="newsGrid">
            {newsData.map(news => (
                <article class="news-card" data-news-id={news.id} data-news-slug={news.slug}>
                    <div class="news-image">
                        <img src={news.image} alt={news.title} />
                        <div class="news-category">{news.category}</div>
                    </div>
                    <div class="news-content">
                        <h3 class="news-title">{news.title}</h3>
                        <p class="news-summary">{news.summary}</p>
                        <div class="news-meta">
                            <span class="news-date">{news.date}</span>
                            <span class="news-read-more">Leer más →</span>
                        </div>
                    </div>
                </article>
            ))}
        </div>
    </div>
</section>
<Footer />
</Layout>