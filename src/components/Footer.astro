<style>
  .simple-footer {
    background: #111;
    border-top: 1px solid #333;
    padding: 2rem 1rem;
    margin: 4rem 0 0 0;
    text-align: center;
    color: #ccc;
    width: 100%;
    display: block;
    box-sizing: border-box;
  }
  
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    width: 100%;
    box-sizing: border-box;
  }
  
  .footer-logo {
    margin-bottom: 1.5rem;
  }
  
  .footer-logo img {
    height: 40px;
    margin-bottom: 1rem;
  }
  
  .footer-text {
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0.5rem 0;
  }
  
  .footer-text a {
    color: #3bb4fc;
    text-decoration: none;
  }
  
  .footer-text a:hover {
    text-decoration: underline;
  }
  
  .footer-license {
    font-size: 0.85rem;
    color: #888;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #333;
  }
  
  @media (max-width: 768px) {
    .simple-footer {
      padding: 1.5rem 1rem;
      margin-top: 2rem;
    }
    
    .footer-logo img {
      height: 35px;
    }
    
    .footer-text {
      font-size: 0.85rem;
    }
    
    .footer-license {
      font-size: 0.8rem;
    }
  }
</style>

