<script is:inline>
  (() => {
    const grid = document.querySelector('.welcome-container .projects-grid');
    if (!grid) {
      return;
    }

    const cards = Array.from(grid.querySelectorAll('.project-card'));
    if (cards.length === 0) {
      return;
    }

    let resizeFrame = 0;

    const assignRowMetadata = () => {
      const rowMap = new Map();
      cards.forEach((card) => {
        const top = Math.round(card.offsetTop);
        const normalizedTop = Math.round(top / 24) * 24;
        if (!rowMap.has(normalizedTop)) {
          rowMap.set(normalizedTop, []);
        }
        rowMap.get(normalizedTop)?.push(card);
      });

      const orderedRows = Array.from(rowMap.entries())
        .sort((a, b) => a[0] - b[0])
        .map(([, rowCards]) => rowCards);

      orderedRows.forEach((rowCards, rowIndex) => {
        rowCards.forEach((card, colIndex) => {
          card.style.setProperty('--row-index', String(rowIndex));
          card.style.setProperty('--col-index', String(colIndex));
        });
      });
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.35,
    });

    const queueResize = () => {
      if (resizeFrame) {
        window.cancelAnimationFrame(resizeFrame);
      }
      resizeFrame = window.requestAnimationFrame(assignRowMetadata);
    };

    assignRowMetadata();
    cards.forEach((card) => observer.observe(card));

    window.addEventListener('resize', queueResize);
    window.addEventListener('orientationchange', queueResize);
    window.addEventListener('load', assignRowMetadata, { once: true });
  })();
</script>
